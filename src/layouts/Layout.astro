---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="LASS music" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	:root {
		--main-bg-color: #C6C9CE;
	}
	html, body {
		max-height: 100vh;
		max-width: 100vw;
		padding: 0 0;
		margin: 0 0;
		background-color: var(--main-bg-color);
		display: flex;
	}
</style>
