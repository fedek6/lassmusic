---
import { Image } from 'astro:assets';
import loveholic from "../images/loveholic.jpg";
import staloweMagnolie from "../images/LASS_ COVER 1 _ stalowe magnolie.jpg";

---
<article>
    <div>
        <a href="https://adm.ffm.to/StaloweMagnolie" target="_blank">
            <Image src={staloweMagnolie}  width="1000"
            height="1000"
            decoding="async"
            widths={[240, 540, 720, 1000]}
            alt="Stalowe Magnolie" />
        </a>
    </div>
    <div>
        <a href="https://ffm.to/LOVEHOLIC" target="_blank">
            <Image src={loveholic}   width="1000"
            height="1000"
            decoding="async"
            widths={[240, 540, 720, 1000]}
            alt="Loveholic" />
        </a>
    </div>
</article>
<style lang="scss">
    article {
        width: 100%;
        max-width: 50vw;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 64px;
    }

    div {
        flex: 1 1 auto;
        align-self: auto;
    }
    img {
        width: 100%;
        height: auto;
        box-shadow: 8px 8px 24px 0px rgba(0, 0, 0, 0.1);
    }
    a > img {
        transition: transform 0.3s ease-in-out;
    }
    a:hover > img {
        transform: scale(1.05);

    }
</style>